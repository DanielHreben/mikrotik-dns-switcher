  "homepage": "https://github.com/DanielHreben/mikrotik-dns-switcher/",
  "scripts": {
    "test": "jest --config jest.config.json",
    "lint": "tsc && eslint . --config eslint.config.mts",
    "start": "node -r dotenv/config --watch src/index.mts | pino-pretty",
    "test:get": "source .env    && curl -X GET    -H \"X-Real-IP: $TEST_CLIENT_IP\" http://localhost:${PORT}/api/dns | npx pino-pretty",
    "test:put": "source .env    && curl -X PUT    -H \"X-Real-IP: $TEST_CLIENT_IP\" http://localhost:${PORT}/api/dns | npx pino-pretty",
    "test:delete": "source .env && curl -X DELETE -H \"X-Real-IP: $TEST_CLIENT_IP\" http://localhost:${PORT}/api/dns | npx pino-pretty"
  },
  "packageManager": "yarn@1.22.22",
  "enginesStrict": {
    "node": ">=v22.18.0"
  },
  "devDependencies": {
    "@types/koa": "^3.0.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-static": "^4.0.4",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^24.2.1",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jiti": "^2.5.1",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  },
  "type": "module",
  "dependencies": {
    "@koa/router": "^14.0.0",
    "koa": "3",
    "koa-bodyparser": "^4.4.1",
    "koa-static": "^5.0.0",
    "pino": "^9.8.0",
    "routeros-api": "^1.0.1",
    "zod": "^4.0.16"
  }
}